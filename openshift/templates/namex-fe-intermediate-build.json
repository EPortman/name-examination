{
    "kind": "Template",
    "apiVersion": "v1",
    "metadata": {
        "name": "${BUILD_NAME}",
        "creationTimestamp": null
    },
    "objects": [
        {
            "kind": "BuildConfig",
            "apiVersion": "v1",
            "metadata": {
                "name": "${NAME}",
                "creationTimestamp": null,
                "labels": {
                    "app": "${NAME}"
                },
                "annotations": {
                    "openshift.io/generated-by": "OpenShiftWebConsole"
                }
            },
            "spec": {
                "triggers": [
                    {
                        "type": "GitHub",
                        "github": {
                            "secret": "0f20aca6da7fffdb"
                        }
                    },
                    {
                        "type": "Generic",
                        "generic": {
                            "secret": "968b976ca77eca64"
                        }
                    },
                    {
                        "type": "ImageChange",
                        "imageChange": {}
                    },
                    {
                        "type": "ConfigChange"
                    }
                ],
                "runPolicy": "Serial",
                "source": {
                    "type": "Git",
                    "git": {
                        "uri": "${SOURCE_REPOSITORY_URL}",
                        "ref": "${SOURCE_REPOSITORY_REF}"
                    },
                    "contextDir":   "${CONTEXT_DIR}"
                },
                "strategy": {
                    "type": "Source",
                    "sourceStrategy": {
                        "from": {
                            "kind": "ImageStreamTag",
                            "namespace": "openshift",
                            "name": "nodejs:6"
                        }
                    }
                },
                "output": {
                    "to": {
                        "kind": "ImageStreamTag",
                        "name": "${OUTPUT_IMAGE}:latest"
                    }
                },
                "resources": {
                    "limits": {
                        "cpu": "4",
                        "memory": "4Gi"
                    }
                },
                "postCommit": {},
                "nodeSelector": null
            },
            "status": {
                "lastVersion": 0
            }
        }
    ],
    "parameters": [
        {
            "name": "BUILD_NAME",
            "description": "The name of this build",
            "displayname": "",
            "required": true,
            "value": "namex-fe-build"
        },
        {
            "name": "CONTEXT_DIR",
            "description": "The subdirectory within the project that contains the source code to build",
            "displayname": "",
            "required": true,
            "value": "client"
        },
        {
            "name": "SOURCE_REPOSITORY_URL",
            "description": "The URL of the repository with your application source code",
            "displayname": "",
            "required": true,
            "value": "https://github.com/bcgov/name-examination.git"
        },
        {
            "name": "SOURCE_REPOSITORY_REF",
            "description": "Set this to a branch name, tag or other ref of your repository if you are not using the default branch",
            "displayname": "",
            "required": true,
            "value": "master"
        },
        {
            "name": "OUTPUT_IMAGE",
            "description": "The name of the output image generated by this build",
            "displayname": "",
            "required": true,
            "value": "namex-front"
        }

    ]
}
